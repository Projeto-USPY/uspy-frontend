{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript Lint",
            "command": "./node_modules/.bin/tsc",
            "args": [
                "-p",
                ".",
                "--noEmit"
            ],
            "isBackground": false,
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "revealProblems": "always",
            }
        }
    ]
}