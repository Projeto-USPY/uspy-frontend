{
	"env": {
		"browser": true,
		"es2015": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard",
		"plugin:cypress/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"@typescript-eslint",
		"import-helpers",
		"cypress"
	],
	"overrides": [{
		"files": "*.ts"
	}],
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"react/prop-types": 0,
		"camelcase": "warn",
		"import-helpers/order-imports": [
			"warn",
			{ // example configuration
				"newlinesBetween": "always",
				"groups": [
					"/^react/",
					"/^redux/",
					"/^@material-ui/",
					"/^types/",
					"module"
				],
				"alphabetize": { "order": "asc", "ignoreCase": true }
			}
		]
	}
}
